<% layout("/layouts/boilarplate") %>

<div class="container mt-4">
  <div class="row mb-3">
    <div class="col-8 offset-3">
      <h3>Listing Details :</h3>
    </div>
  </div>

  <div class="row mb-3">
    <div class="card col-6 offset-3 show-card  border-0">
      <img src="<%= listing.image %>" class="card-img-top show-img" alt="Images">
      <div class="card-body">
        <p class="card-text"> 
         
          <b><%= listing.title %></b><br>
           <p>owen By: <i><%=listing.owner.username%></i> </p>
          <%= listing.description %><br>
          &#8377; <%= listing.price.toLocaleString("en-IN") %><br>
          <%= listing.location %><br>
          <%= listing.country %><br>
        </p>
      </div>
    </div>
  </div>
<% if (currUser && String(currUser._id) === String(listing.owner._id)) { %>

  <div class="row btns mb-5">
    <div class="col-3 offset-3">
      <a href="/listings/<%= listing._id %>/edit" ><button class="add " style="width: 5rem; border-radius:0.5rem ;">Edit</button></a>
    </div>
    <div class="col-3 offset-1">
      <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-danger w-50">Delete</button>
      </form>
    </div>
  </div> <%}%>
</div>
<div class="col-8 offset-3">
  <hr>
  <h4 class="mb-3">Leave a Review</h4>
  <form action="/listings/<%=listing._id%>/reviews" method="POST" class="needs-validation" novalidate>
    <!-- Rating -->
    <div class="mb-4">
      <label for="rating" class="form-label">Rating</label>
      <input type="range" class="form-range" id="rating" name="review[rating]" min="1" max="5">
    </div>

    <!-- Comment -->
    <div class="mb-4">
      <label for="comment" class="form-label">Comments</label>
      <textarea class="form-control" id="comment" name="review[comment]" rows="5" placeholder="Write your thoughts..." required></textarea>
     <div class="invalid-feedback">
        Please Add Comment.
      </div>
    </div>

   
 <button type="submit" class="btn btn-outline-dark">Submit</button>
  </form>
  <hr/>
<p><b>ALL REVIEWS</b></p>
<div class="row">

   <% for(review of listing.reviews){%>
    <div class="card col-5 ms-3 mb-3 ">
      <div class="card-body">
        <h5 class="card-title">Tejas k</h5>
        <p class="card-text"><%=review.comment%></p>
         <p class="card-text"><%=review.rating%> Star</p>

      </div>
      <form class="mb-3" method="post" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE">
        <button class="btn btn-sm btn-dark">Delete</button>
      </form>
    </div>
     <% }%>
</div>
 
   
      
</div>
