<%layout("/layouts/boilarplate")%>
<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
    padding: 20px;
    background-color: #f8f9fa;
  }

  .filter {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 90px;
    height: 90px;
    background-color: white;
    border-radius: 15px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .filter:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
    background-color: #e6f0ff;
  }

  .filter i {
    font-size: 24px;
    color: #007bff;
    margin-bottom: 5px;
  }

  .filter p {
    margin: 0;
    font-size: 14px;
    color: #333;
    font-weight: 500;
    text-transform: capitalize;
  }
  #filter-toggle {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 20px auto;
  padding: 10px 20px;
  font-weight: 500;
  gap: 10px;
  font-size: 16px;

  border: 2px solid #007bff;
  border-radius: 50px; /* Oval shape */
  width: fit-content;
  background-color: #fff;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
}

/* Optional: Hide filters if switch is OFF */
#filters.hidden {
  display: none;
}

</style>

  <body>
    <div id="filters">
      <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>trending</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain-sun"></i></div>
        <p>Mounatis</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-umbrella-beach"></i></i></div>
        <p>Beach</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-sailboat"></i></div>
        <p>River</p>
      </div>
      <div class="filter">
        <div><i class="fa-brands fa-fort-awesome"></i></i></div>
        <p>Castle</p>
      </div>
      <div class="filter">
        <div><i class="fa-regular fa-mountain-city"></i></div>
        <p>City</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-heart"></i></i></div>
        <p>Couple</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-tractor"></i></div>
        <p>Farm</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-martini-glass-citrus"></i></div>
        <p>Artic</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-crown"></i></div>
        <p>Royal</p>
      </div>
      <div class="form-check form-switch" id="filter-toggle">
    <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
    <label class="form-check-label" for="flexSwitchCheckDefault">Show Filters</label>
  </div>
    </div>
