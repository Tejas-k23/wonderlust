<% layout("layouts/boilarplate") %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="alert alert-danger shadow p-4 rounded" role="alert">
        <h1 class="alert-heading">Oops! 😬</h1>
        <hr>
        <h4>Status Code: <%= err.statusCode || 500 %></h4>
        <p class="mb-0"><strong><%= err.message || "Something went wrong!" %></strong></p>
        <a href="/listings" class="btn btn-outline-dark mt-3">⬅️ Go Back to Listings</a>
      </div>
    </div>
  </div>
</div>
