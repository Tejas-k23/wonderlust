<% layout("layouts/boilarplate") %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="alert alert-danger shadow-lg p-4 rounded text-center" role="alert" style="animation: shake 0.3s ease-in-out;">
        <h1 class="alert-heading">🚨 Error <%= statusCode %> 🚨</h1>
        <hr>
        <p class="fs-5 text-danger"><strong><%= message %></strong></p>
        <img src="https://cdn-icons-png.flaticon.com/512/564/564619.png" alt="Error image" class="img-fluid mt-3" style="max-width: 100px;">
        <div class="mt-4">
          <a href="/listings" class="btn btn-outline-dark">⬅️ Back to Listings</a>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
@keyframes shake {
  0% { transform: translateX(0); }
  25% { transform: translateX(-4px); }
  50% { transform: translateX(4px); }
  75% { transform: translateX(-4px); }
  100% { transform: translateX(0); }
}
</style>
